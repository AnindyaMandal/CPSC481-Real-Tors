<Page x:Class="Real_Tors_Application.MapViewZoomed2Hovered"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Real_Tors_Application"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MapViewZoomed2Hovered">

    <Grid>

        <Image Source="Calgary_Zoomed2.jpg" Margin="0,0,0,-14" Stretch="UniformToFill" />

        <StackPanel x:Name="navBarStackPanel" Orientation="Horizontal" Height="100" VerticalAlignment="Top" Width="1920">
            <Button x:Name="homeButton" Content="Home" Width="320" FontSize="40" Background="#FF7B82A0" Click="homeButton_Click"/>
            <Button x:Name="aboutButton" Content="About" Width="320" FontSize="40" Background="#FF7B82A0"/>
            <Button x:Name="teamButton" Content="Our team" Width="320" FontSize="40" Background="#FF7B82A0"/>
            <Button x:Name="contactButton" Content="Contact Us" Width="320" FontSize="40" Background="#FF7B82A0"/>
            <Button x:Name="navLogInButton" Content="Log In" Width="320" FontSize="40" Background="#FF7B82A0" Click="navLogInButton_Click"/>
            <Button x:Name="signUpButton" Content="Sign Up" Width="320" FontSize="40" Background="#FF7B82A0" Click="signUpButton_Click"/>
        </StackPanel>

        <Button x:Name="btn_Map" RenderTransformOrigin="5.875,2.445" Margin="610,822,226,44" Click="Btn_Map_Click">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="MapPin.png"  RenderTransformOrigin="1.17,1.11"/>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Image Source="/MapPin.png" Margin="1097,669,-229,197" RenderTransformOrigin="1.17,1.11"/>
        <Image Source="/MapPin.png" Margin="878,183,-19,684" RenderTransformOrigin="1.17,1.11"/>

        <Image Source="right-arrow.png" Margin="1668,494,16,372" RenderTransformOrigin="1.17,1.11"/>
        <Image Source="left-arrow.png" Margin="16,494,1668,372" RenderTransformOrigin="1.17,1.11"/>


        <Image Source="LegendCircle.png" Margin="959,952,921,96" RenderTransformOrigin="1.17,1.11"/>
        <Image Source="LegendCircle.png" Margin="1565,585,315,463" RenderTransformOrigin="1.17,1.11"/>
        <Image Source="LegendCircle.png" Margin="832,776,1048,272" RenderTransformOrigin="1.17,1.11"/>

        <Image Source="Legend.png" Margin="1367,50,-79,616" RenderTransformOrigin="1.17,1.11"/>
        <Label Content="Legend" HorizontalAlignment="Left" Margin="1604,126,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="50" RenderTransformOrigin="0.836,0.614"/>
        <Image Source="LegendSquare.png" Margin="1505,202,330,806" RenderTransformOrigin="1.17,1.11"/>
        <Label Content="Park Areas" HorizontalAlignment="Left" Margin="1588,200,0,0" VerticalAlignment="Top" FontSize="40" RenderTransformOrigin="0.836,0.614"/>
        <Image Source="LegendCircle.png" Margin="1505,292,330,716" RenderTransformOrigin="1.17,1.11"/>
        <Label Content="Transit" HorizontalAlignment="Left" Margin="1588,298,0,0" VerticalAlignment="Top" FontSize="40" RenderTransformOrigin="0.836,0.614"/>

        
        
        <Button x:Name="btn_ListView" Content="List Results" FontSize="40" HorizontalAlignment="Right" Margin="0,0,30,30" Padding="10" VerticalAlignment="Bottom" Width="Auto" Click="Btn_ListView_Click"/>

    </Grid>
</Page>
