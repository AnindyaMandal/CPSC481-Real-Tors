<Page x:Class="Real_Tors_Application.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Real_Tors_Application"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}">
        <Button x:Name="btn_ListView" Content="Go to ListView" HorizontalAlignment="Left" Margin="320,110,0,0" VerticalAlignment="Top" Width="160" Click="btn_ListView_Click"/>
        <Button x:Name="btn_FilterView" Content="Go to FilterView" HorizontalAlignment="Left" Margin="320,180,0,0" VerticalAlignment="Top" Width="160" Click="btn_FilterView_Click"/>
        <Button x:Name="btn_TestView" Content="Go to TestView" HorizontalAlignment="Left" Margin="320,240,0,0" VerticalAlignment="Top" Width="160" Click="btn_TestView_Click"/>
    </Grid>
</Page>
